.info-container{
  display: flex;
  flex: 1;
  height: 100%;
  width: 100%;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  /* padding: 20rpx 10rpx; */
  /* background:#dddddd;  */

  /* border:1rpx solid; */
  /* border-radius:25rpx; */
}
.info-title{
  display: flex;
  justify-content: space-between;
  width: 90%;
  padding: 10rpx;
  font-size: 70rpx;
}
.logo{
  width: 100rpx;
  height: 100rpx;
}
.info-item{
  padding: 10rpx 5rpx; 
  padding-left: 20rpx;
  padding-right: 20rpx;
  margin: 5rpx;
  display: flex;
  flex: 1;
  width: 90%; 
  justify-content: space-between;
  font-size: 30rpx;
  border:2rpx solid; 
  border-radius:5rpx; 
}
.swiper{
  /* width: 100%;
