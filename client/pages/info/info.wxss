}

.swiper-item{
  width: 80%; 
  height: 120%; 
  justify-content: flex-end;
  align-items: flex-end; 
}

.image{
  /* border: 1rpx solid; */
  width: 100%;
  height: 100%;
}

.list-view{
  display: flex;
  flex-direction: column;
  width: 96%;
  justify-content: center;
  align-items: center;
  padding: 10rpx;
}

.list-item{
  display: flex;
  flex-direction: row; 
  justify-content: flex-start;
  align-items: center;
  width: 100%;
  height: 120rpx;
  padding: 10rpx; 
  margin: 5rpx;  
  background-color: #FFFFFF;
  border-radius: 5rpx;
}
.item-image{
  /* border: 1rpx solid; */
